                android:background="@drawable/background_slot"
                android:contentDescription="@string/default_description"
                android:gravity="center"/>
            <ImageButton 
                android:id="@+id/inventar_slot7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/background_slot"
                android:contentDescription="@string/default_description"
                android:gravity="center"/>
            <ImageButton 
                android:id="@+id/inventar_slot8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/background_slot"
                android:contentDescription="@string/default_description"
                android:gravity="center"/>
            <ImageButton 
                android:id="@+id/inventar_slot9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/background_slot"
                android:contentDescription="@string/default_description"
                android:gravity="center"/>
            <ImageButton 
                android:id="@+id/inventar_slot10"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/background_slot"
                android:contentDescription="@string/default_description"
                android:gravity="center"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>