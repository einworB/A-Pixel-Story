<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_mainmenu"
    tools:context=".MainActivity" >
    
    
    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            
            <ImageView
                android:id="@+id/clouds4"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/background_mainmenu"
                android:contentDescription="@string/default_description" />
            
            
        </RelativeLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/startmenu_title"
        android:textSize="50sp" />

    <TableLayout
        android:id="@+id/Tabelle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_textview"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <TableRow android:id="@+id/row_one" >

            <ImageButton
                android:id="@+id/new_game_imageview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/new_game_button"
                android:contentDescription="@string/description_start_game" />
            
            <TextView 
                android:id="@+id/new_game_textview"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/new_game_string"
                android:textSize="20sp"/>
            
            <View 
                android:layout_width="100dp"
                android:layout_height="50dp"/>
            
            <ImageButton
                android:id="@+id/load_game_imageview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/load_game_button"
                android:contentDescription="@string/description_load_game" />
            
            <TextView 
                android:id="@+id/load_game_textview"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/load_game_string"
                android:textSize="20sp"/>
            
            
        </TableRow>
        
        <TableRow android:id="@+id/row_two"
            android:layout_marginTop="30dp" >

            <ImageButton
                android:id="@+id/options_imageview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:contentDescription="@string/description_options" />
            
            <TextView 
                android:id="@+id/options_textview"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/options_string"
                android:textSize="20sp"/>
            
            <View 
                android:layout_width="100dp"
                android:layout_height="50dp"/>
            
            <ImageButton
                android:id="@+id/help_imageview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/help_button"
                android:contentDescription="@string/description_help" />
            
            <TextView 
                android:id="@+id/help_textview"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/help_string"
                android:textSize="20sp"/>
            
            
        </TableRow>
    </TableLayout>

</RelativeLayout>
